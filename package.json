{
  "name": "moodle-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that provides intelligent access to a local Moodle LMS codebase using ripgrep for fast, lexical searches.",
  "keywords": [
    "mcp",
    "moodle",
    "lms",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "moodle-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/moodle-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/moodle-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/moodle-mcp-server#readme"
}
